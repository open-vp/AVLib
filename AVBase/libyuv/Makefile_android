# Makefile

include ../../config.mak

# DEBUG can be set to YES to include debugging info, or NO otherwise
DEBUG         := NO

# PROFILE can be set to YES to include profiling info, or NO otherwise
PROFILE        	:= YES

PRJECTNAME 		:=yuv
GROUPNAME		:=avcore
#****************************************************************************

OUTPUT_OBJDIR	:=${OUTPUT_OBJDIR}${GROUPNAME}/${PRJECTNAME}/
OUTPUT_LIBDIR   :=${OUTPUT_LIBDIR}${GROUPNAME}/

ifeq (YES, ${DEBUG})
   CFLAGS       := ${DEBUG_CFLAGS} -I../../include/${GROUPNAME}
   CXXFLAGS     := ${DEBUG_CXXFLAGS} -I../../include/${GROUPNAME}
   LDFLAGS      := ${DEBUG_LDFLAGS} -L../../lib/android/${GROUPNAME}
   OUTPUT		:= ${OUTPUT_LIBDIR}lib${PRJECTNAME}d.a
   OUTPUT_OBJDIR:= ${OUTPUT_OBJDIR}debug
else
   CFLAGS       := ${RELEASE_CFLAGS} -I../../include/${GROUPNAME}
   CXXFLAGS     := ${RELEASE_CXXFLAGS} -I../../include/${GROUPNAME}
   LDFLAGS      := ${RELEASE_LDFLAGS} -L../../lib/android/${GROUPNAME}
   OUTPUT		:= ${OUTPUT_LIBDIR}lib${PRJECTNAME}.a
   OUTPUT_OBJDIR := ${OUTPUT_OBJDIR}release
endif

ifeq (YES, ${PROFILE})
   CFLAGS   := ${CFLAGS} -O3
   CXXFLAGS := ${CXXFLAGS} -O3
   LDFLAGS  := ${LDFLAGS}
endif

#****************************************************************************
# Preprocessor directives
#****************************************************************************

DEFS := -DLIBYUV_NEON -mfpu=neon

#****************************************************************************
# Include paths
#****************************************************************************

INCS := -I./include

#****************************************************************************
# Makefile code common to all platforms
#****************************************************************************

CFLAGS   := ${CFLAGS}   ${DEFS}
CXXFLAGS := ${CXXFLAGS} ${DEFS}

#****************************************************************************
# Targets of the build
#****************************************************************************

all: ${OUTPUT}
	if [ ! -d "${OUTPUT_OBJDIR}" ] ; then mkdir "${OUTPUT_OBJDIR}" -p -v; fi
	mv ${OBJS} ${OUTPUT_OBJDIR} -v 			
	mv ${OBJSD} ${OUTPUT_OBJDIR} -v 	
	
#****************************************************************************
# Source files
#****************************************************************************

SRCS :=  \
    ./source/compare.cc           \
    ./source/compare_common.cc    \
    ./source/compare_posix.cc     \
	./source/compare_neon.cc      \
	./source/compare_neon64.cc    \
	./source/convert.cc 		  \
    ./source/convert_argb.cc      \
    ./source/convert_from.cc      \
    ./source/convert_jpeg.cc 	  \
    ./source/convert_from_argb.cc \
    ./source/convert_to_argb.cc   \
    ./source/convert_to_i420.cc   \
    ./source/cpu_id.cc            \
    ./source/format_conversion.cc \
    ./source/mjpeg_decoder.cc     \
    ./source/mjpeg_validate.cc    \
    ./source/planar_functions.cc  \
    ./source/rotate.cc            \
    ./source/rotate_argb.cc       \
    ./source/rotate_mips.cc       \
	./source/rotate_neon.cc       \
	./source/rotate_neon64.cc     \
    ./source/row_any.cc           \
    ./source/row_common.cc        \
    ./source/row_mips.cc          \
    ./source/row_neon.cc          \
    ./source/row_neon64.cc        \
    ./source/row_posix.cc         \
    ./source/scale.cc             \
    ./source/scale_argb.cc        \
    ./source/scale_common.cc      \
    ./source/scale_mips.cc        \
    ./source/scale_neon.cc        \
    ./source/scale_neon64.cc      \
    ./source/scale_posix.cc       \
    ./source/video_common.cc	  \
	
ASM_SRCS = 	
				
# Add on the sources for libraries
SRCS := ${SRCS} ${ASM_SRCS}

OBJS := $(addsuffix .o,$(basename ${SRCS}))
OBJSD := $(addsuffix .d,$(basename ${SRCS}))

#****************************************************************************
# Output
#****************************************************************************

${OUTPUT}: ${OBJS}
	if [ ! -d "${OUTPUT_LIBDIR}" ] ; then mkdir "${OUTPUT_LIBDIR}" -p -v; fi
	${AR} $@ ${OBJS} ${EXTRA_LIBS}

#****************************************************************************
# common rules
#****************************************************************************

# Rules for compiling source files to object files
%.o : %.cc
	${CXX} -c ${CXXFLAGS} ${INCS} $< -o $@

%.o : %.S
	${CC} -c ${ASFLAGS} ${INCS} $< -o $@

%.o : %.c
	${CC} -c ${CFLAGS} ${INCS} $< -o $@
	
%.o : %.cxx
	${CC} -c ${CFLAGS} ${INCS} $< -o $@	

dist:
	bash makedistlinux

clean:
	rm -f core ${OBJS} ${OUTPUT}
	rm -f core ${OUTPUT_OBJDIR}/*.o

depend:
	#makedepend ${INCS} ${SRCS}